#!/usr/bin/env bash

##############################################################################
##
##  WebEngineering start up script for UN*X
##
##############################################################################

# Attempt to set APP_HOME
# Resolve links: $0 may be a link
PRG="$0"
# Need this for relative symlinks.
while [ -h "$PRG" ] ; do
    ls=`ls -ld "$PRG"`
    link=`expr "$ls" : '.*-> \(.*\)$'`
    if expr "$link" : '/.*' > /dev/null; then
        PRG="$link"
    else
        PRG=`dirname "$PRG"`"/$link"
    fi
done
SAVED="`pwd`"
cd "`dirname \"$PRG\"`/.." >/dev/null
APP_HOME="`pwd -P`"
cd "$SAVED" >/dev/null

APP_NAME="WebEngineering"
APP_BASE_NAME=`basename "$0"`

# Add default JVM options here. You can also use JAVA_OPTS and WEB_ENGINEERING_OPTS to pass JVM options to this script.
DEFAULT_JVM_OPTS=""

# Use the maximum available, or set MAX_FD != -1 to use that value.
MAX_FD="maximum"

warn ( ) {
    echo "$*"
}

die ( ) {
    echo
    echo "$*"
    echo
    exit 1
}

# OS specific support (must be 'true' or 'false').
cygwin=false
msys=false
darwin=false
nonstop=false
case "`uname`" in
  CYGWIN* )
    cygwin=true
    ;;
  Darwin* )
    darwin=true
    ;;
  MINGW* )
    msys=true
    ;;
  NONSTOP* )
    nonstop=true
    ;;
esac

CLASSPATH=$APP_HOME/lib/WebEngineering-0.1.jar:$APP_HOME/lib/spring-boot-starter-logging-1.4.4.RELEASE.jar:$APP_HOME/lib/spring-boot-autoconfigure-1.4.4.RELEASE.jar:$APP_HOME/lib/grails-core-3.2.6.jar:$APP_HOME/lib/spring-boot-starter-actuator-1.4.4.RELEASE.jar:$APP_HOME/lib/spring-boot-starter-tomcat-1.4.4.RELEASE.jar:$APP_HOME/lib/grails-web-boot-3.2.6.jar:$APP_HOME/lib/cache-3.0.3.jar:$APP_HOME/lib/scaffolding-3.2.1.jar:$APP_HOME/lib/hibernate5-6.0.7.jar:$APP_HOME/lib/hibernate-core-5.1.2.Final.jar:$APP_HOME/lib/hibernate-ehcache-5.1.2.Final.jar:$APP_HOME/lib/asset-pipeline-grails-2.11.6.jar:$APP_HOME/lib/h2-1.4.193.jar:$APP_HOME/lib/logback-classic-1.1.9.jar:$APP_HOME/lib/jcl-over-slf4j-1.7.22.jar:$APP_HOME/lib/jul-to-slf4j-1.7.22.jar:$APP_HOME/lib/log4j-over-slf4j-1.7.22.jar:$APP_HOME/lib/spring-boot-1.4.4.RELEASE.jar:$APP_HOME/lib/serializer-2.7.2.jar:$APP_HOME/lib/groovy-2.4.7.jar:$APP_HOME/lib/slf4j-api-1.7.22.jar:$APP_HOME/lib/hibernate-jpa-2.1-api-1.0.0.Final.jar:$APP_HOME/lib/concurrentlinkedhashmap-lru-1.4.2.jar:$APP_HOME/lib/spring-core-4.3.6.RELEASE.jar:$APP_HOME/lib/spring-tx-4.3.6.RELEASE.jar:$APP_HOME/lib/spring-beans-4.3.6.RELEASE.jar:$APP_HOME/lib/spring-context-4.3.6.RELEASE.jar:$APP_HOME/lib/grails-bootstrap-3.2.6.jar:$APP_HOME/lib/grails-spring-3.2.6.jar:$APP_HOME/lib/spring-boot-starter-1.4.4.RELEASE.jar:$APP_HOME/lib/spring-boot-actuator-1.4.4.RELEASE.jar:$APP_HOME/lib/tomcat-embed-core-8.5.11.jar:$APP_HOME/lib/tomcat-embed-el-8.5.11.jar:$APP_HOME/lib/tomcat-embed-websocket-8.5.11.jar:$APP_HOME/lib/grails-plugin-rest-3.2.6.jar:$APP_HOME/lib/grails-plugin-databinding-3.2.6.jar:$APP_HOME/lib/grails-plugin-i18n-3.2.6.jar:$APP_HOME/lib/grails-plugin-gsp-3.2.6.jar:$APP_HOME/lib/grails-plugin-services-3.2.6.jar:$APP_HOME/lib/grails-plugin-url-mappings-3.2.6.jar:$APP_HOME/lib/grails-plugin-interceptors-3.2.6.jar:$APP_HOME/lib/grails-plugin-async-3.2.6.jar:$APP_HOME/lib/grails-web-common-3.2.6.jar:$APP_HOME/lib/javassist-3.20.0-GA.jar:$APP_HOME/lib/fields-2.1.3.jar:$APP_HOME/lib/grails-datastore-web-6.0.7.RELEASE.jar:$APP_HOME/lib/grails-datastore-simple-6.0.7.RELEASE.jar:$APP_HOME/lib/grails-datastore-gorm-support-6.0.7.RELEASE.jar:$APP_HOME/lib/grails-datastore-gorm-hibernate5-6.0.7.RELEASE.jar:$APP_HOME/lib/spring-orm-4.3.6.RELEASE.jar:$APP_HOME/lib/jboss-logging-3.3.0.Final.jar:$APP_HOME/lib/antlr-2.7.7.jar:$APP_HOME/lib/geronimo-jta_1.1_spec-1.1.1.jar:$APP_HOME/lib/jandex-2.0.0.Final.jar:$APP_HOME/lib/classmate-1.3.3.jar:$APP_HOME/lib/dom4j-1.6.1.jar:$APP_HOME/lib/hibernate-commons-annotations-5.0.1.Final.jar:$APP_HOME/lib/ehcache-2.10.3.jar:$APP_HOME/lib/rhino-1.7R4.jar:$APP_HOME/lib/asset-pipeline-core-2.11.6.jar:$APP_HOME/lib/logback-core-1.1.9.jar:$APP_HOME/lib/commons-logging-1.2.jar:$APP_HOME/lib/spring-aop-4.3.6.RELEASE.jar:$APP_HOME/lib/spring-expression-4.3.6.RELEASE.jar:$APP_HOME/lib/groovy-xml-2.4.7.jar:$APP_HOME/lib/groovy-templates-2.4.7.jar:$APP_HOME/lib/snakeyaml-1.17.jar:$APP_HOME/lib/jackson-databind-2.8.6.jar:$APP_HOME/lib/grails-web-3.2.6.jar:$APP_HOME/lib/grails-plugin-controllers-3.2.6.jar:$APP_HOME/lib/grails-plugin-datasource-3.2.6.jar:$APP_HOME/lib/commons-lang-2.6.jar:$APP_HOME/lib/grails-plugin-codecs-3.2.6.jar:$APP_HOME/lib/grails-logging-3.2.6.jar:$APP_HOME/lib/grails-web-gsp-taglib-3.2.6.jar:$APP_HOME/lib/grails-plugin-events-3.2.6.jar:$APP_HOME/lib/grails-validation-3.2.6.jar:$APP_HOME/lib/grails-databinding-3.2.6.jar:$APP_HOME/lib/grails-encoder-3.2.6.jar:$APP_HOME/lib/grails-gsp-3.2.6.jar:$APP_HOME/lib/spring-webmvc-4.3.6.RELEASE.jar:$APP_HOME/lib/spring-context-support-4.3.6.RELEASE.jar:$APP_HOME/lib/gson-2.7.jar:$APP_HOME/lib/grails-datastore-core-6.0.7.RELEASE.jar:$APP_HOME/lib/spring-web-4.3.6.RELEASE.jar:$APP_HOME/lib/grails-datastore-gorm-6.0.7.RELEASE.jar:$APP_HOME/lib/javax.el-api-2.2.4.jar:$APP_HOME/lib/grails-datastore-gorm-hibernate-core-6.0.7.RELEASE.jar:$APP_HOME/lib/hibernate-validator-5.2.4.Final.jar:$APP_HOME/lib/spring-jdbc-4.3.6.RELEASE.jar:$APP_HOME/lib/xml-apis-1.4.01.jar:$APP_HOME/lib/closure-compiler-unshaded-v20160713.jar:$APP_HOME/lib/jackson-annotations-2.8.6.jar:$APP_HOME/lib/jackson-core-2.8.6.jar:$APP_HOME/lib/spring-aspects-4.3.6.RELEASE.jar:$APP_HOME/lib/aspectjrt-1.8.9.jar:$APP_HOME/lib/aspectjweaver-1.8.9.jar:$APP_HOME/lib/grails-web-gsp-3.2.6.jar:$APP_HOME/lib/grails-web-databinding-3.2.6.jar:$APP_HOME/lib/grails-web-url-mappings-3.2.6.jar:$APP_HOME/lib/grails-web-jsp-3.2.6.jar:$APP_HOME/lib/grails-web-mvc-3.2.6.jar:$APP_HOME/lib/grails-web-sitemesh-3.2.6.jar:$APP_HOME/lib/grails-async-3.2.6.jar:$APP_HOME/lib/grails-plugin-converters-3.2.6.jar:$APP_HOME/lib/grails-plugin-mimetypes-3.2.6.jar:$APP_HOME/lib/grails-plugin-validation-3.2.6.jar:$APP_HOME/lib/grails-plugin-domain-class-3.2.6.jar:$APP_HOME/lib/tomcat-embed-logging-log4j-8.5.2.jar:$APP_HOME/lib/groovy-sql-2.4.7.jar:$APP_HOME/lib/tomcat-jdbc-8.5.11.jar:$APP_HOME/lib/grails-codecs-3.2.6.jar:$APP_HOME/lib/reactor-spring-context-2.0.7.RELEASE.jar:$APP_HOME/lib/reactor-bus-2.0.8.RELEASE.jar:$APP_HOME/lib/commons-validator-1.5.1.jar:$APP_HOME/lib/groovy-json-2.4.7.jar:$APP_HOME/lib/grails-taglib-3.2.6.jar:$APP_HOME/lib/jta-1.1.jar:$APP_HOME/lib/grails-datastore-async-6.0.7.RELEASE.jar:$APP_HOME/lib/grails-datastore-gorm-validation-6.0.7.RELEASE.jar:$APP_HOME/lib/validation-api-1.1.0.Final.jar:$APP_HOME/lib/closure-compiler-externs-v20160713.jar:$APP_HOME/lib/args4j-2.0.26.jar:$APP_HOME/lib/guava-19.0.jar:$APP_HOME/lib/protobuf-java-2.5.0.jar:$APP_HOME/lib/jsr305-1.3.9.jar:$APP_HOME/lib/grails-web-taglib-3.2.6.jar:$APP_HOME/lib/sitemesh-2.4.jar:$APP_HOME/lib/gpars-1.2.1.jar:$APP_HOME/lib/reactor-core-2.0.8.RELEASE.jar:$APP_HOME/lib/reactor-stream-2.0.8.RELEASE.jar:$APP_HOME/lib/tomcat-juli-8.5.11.jar:$APP_HOME/lib/commons-codec-1.10.jar:$APP_HOME/lib/reactor-spring-core-2.0.7.RELEASE.jar:$APP_HOME/lib/gs-collections-5.1.0.jar:$APP_HOME/lib/commons-collections-3.2.2.jar:$APP_HOME/lib/jsr166y-1.7.0.jar:$APP_HOME/lib/reactive-streams-1.0.0.jar:$APP_HOME/lib/gs-collections-api-5.1.0.jar

# Determine the Java command to use to start the JVM.
if [ -n "$JAVA_HOME" ] ; then
    if [ -x "$JAVA_HOME/jre/sh/java" ] ; then
        # IBM's JDK on AIX uses strange locations for the executables
        JAVACMD="$JAVA_HOME/jre/sh/java"
    else
        JAVACMD="$JAVA_HOME/bin/java"
    fi
    if [ ! -x "$JAVACMD" ] ; then
        die "ERROR: JAVA_HOME is set to an invalid directory: $JAVA_HOME

Please set the JAVA_HOME variable in your environment to match the
location of your Java installation."
    fi
else
    JAVACMD="java"
    which java >/dev/null 2>&1 || die "ERROR: JAVA_HOME is not set and no 'java' command could be found in your PATH.

Please set the JAVA_HOME variable in your environment to match the
location of your Java installation."
fi

# Increase the maximum file descriptors if we can.
if [ "$cygwin" = "false" -a "$darwin" = "false" -a "$nonstop" = "false" ] ; then
    MAX_FD_LIMIT=`ulimit -H -n`
    if [ $? -eq 0 ] ; then
        if [ "$MAX_FD" = "maximum" -o "$MAX_FD" = "max" ] ; then
            MAX_FD="$MAX_FD_LIMIT"
        fi
        ulimit -n $MAX_FD
        if [ $? -ne 0 ] ; then
            warn "Could not set maximum file descriptor limit: $MAX_FD"
        fi
    else
        warn "Could not query maximum file descriptor limit: $MAX_FD_LIMIT"
    fi
fi

# For Darwin, add options to specify how the application appears in the dock
if $darwin; then
    GRADLE_OPTS="$GRADLE_OPTS \"-Xdock:name=$APP_NAME\" \"-Xdock:icon=$APP_HOME/media/gradle.icns\""
fi

# For Cygwin, switch paths to Windows format before running java
if $cygwin ; then
    APP_HOME=`cygpath --path --mixed "$APP_HOME"`
    CLASSPATH=`cygpath --path --mixed "$CLASSPATH"`
    JAVACMD=`cygpath --unix "$JAVACMD"`

    # We build the pattern for arguments to be converted via cygpath
    ROOTDIRSRAW=`find -L / -maxdepth 1 -mindepth 1 -type d 2>/dev/null`
    SEP=""
    for dir in $ROOTDIRSRAW ; do
        ROOTDIRS="$ROOTDIRS$SEP$dir"
        SEP="|"
    done
    OURCYGPATTERN="(^($ROOTDIRS))"
    # Add a user-defined pattern to the cygpath arguments
    if [ "$GRADLE_CYGPATTERN" != "" ] ; then
        OURCYGPATTERN="$OURCYGPATTERN|($GRADLE_CYGPATTERN)"
    fi
    # Now convert the arguments - kludge to limit ourselves to /bin/sh
    i=0
    for arg in "$@" ; do
        CHECK=`echo "$arg"|egrep -c "$OURCYGPATTERN" -`
        CHECK2=`echo "$arg"|egrep -c "^-"`                                 ### Determine if an option

        if [ $CHECK -ne 0 ] && [ $CHECK2 -eq 0 ] ; then                    ### Added a condition
            eval `echo args$i`=`cygpath --path --ignore --mixed "$arg"`
        else
            eval `echo args$i`="\"$arg\""
        fi
        i=$((i+1))
    done
    case $i in
        (0) set -- ;;
        (1) set -- "$args0" ;;
        (2) set -- "$args0" "$args1" ;;
        (3) set -- "$args0" "$args1" "$args2" ;;
        (4) set -- "$args0" "$args1" "$args2" "$args3" ;;
        (5) set -- "$args0" "$args1" "$args2" "$args3" "$args4" ;;
        (6) set -- "$args0" "$args1" "$args2" "$args3" "$args4" "$args5" ;;
        (7) set -- "$args0" "$args1" "$args2" "$args3" "$args4" "$args5" "$args6" ;;
        (8) set -- "$args0" "$args1" "$args2" "$args3" "$args4" "$args5" "$args6" "$args7" ;;
        (9) set -- "$args0" "$args1" "$args2" "$args3" "$args4" "$args5" "$args6" "$args7" "$args8" ;;
    esac
fi

# Split up the JVM_OPTS And WEB_ENGINEERING_OPTS values into an array, following the shell quoting and substitution rules
function splitJvmOpts() {
    JVM_OPTS=("$@")
}
eval splitJvmOpts $DEFAULT_JVM_OPTS $JAVA_OPTS $WEB_ENGINEERING_OPTS


# by default we should be in the correct project dir, but when run from Finder on Mac, the cwd is wrong
if [[ "$(uname)" == "Darwin" ]] && [[ "$HOME" == "$PWD" ]]; then
  cd "$(dirname "$0")"
fi

exec "$JAVACMD" "${JVM_OPTS[@]}" -classpath "$CLASSPATH" mvc.Application "$@"
